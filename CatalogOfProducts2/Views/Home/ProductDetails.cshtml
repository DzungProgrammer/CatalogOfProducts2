@model CatalogOfProducts2.Models.ProductModel

@{
    ViewBag.Title = "ProductDetails";
}

<div class="header">
    <h2>ProductDetails</h2>
    <h4>ProductModel</h4>
</div>

<div>
    <hr />

    <div class="col-lg-1">
        

            <a href="@Url.Content("~/Images/"+Model.ImagePath)">
                <img src="@Url.Content("~/Images/"+Model.ImagePath)" height="200" width="200" />
            </a>
        
    </div>
    
    <div class="row">
           
            
            <dl class="dl-vertical">

               

                <dt>
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Category)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Category)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductPrice) Kč
                </dd>

            </dl>
    </div>
</div>

<div class="footer">
    <p>
        @Html.ActionLink("Back to List", "ViewProducts")
    </p>
    <input type="button" value="Add To Compare" onclick="location.href='@Url.Action("AddToCompareList", "Home",new {id = Model.ProductId })', myFunction()" class="btn btn-default " />
</div>

<script>
    function myFunction() {
        alert("Product added.");
    }
</script>